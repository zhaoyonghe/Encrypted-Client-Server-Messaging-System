{
    "tasks": [
        {
            "type": "process",
            "label": "server sandbox",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/my.cpp",
                "-o",
                "${fileDirname}/msg_server_sandbox/${fileBasenameNoExtension}.out",
                "-lssl",
                "-lcrypto",
                "-lcrypt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/msg_server_sandbox"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "root",
            "command": "/usr/bin/g++",
            "args": [
                "${file}",
                "client.cpp",
                "my.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-lssl",
                "-lcrypto",
                "-lcrypt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}